<div class="container">

  <div class="container mt-5">
    <div class="col-xs-12">
      <h1 class="header">Eat-Da-Burger!</h1>
    </div>
  </div>

  <br>

  <div class="container">
    <div class="col-lg-4 col-xs-6 mx-auto">
      <h2 class="sub-header">Add Your Burger</h2>

      <form class="alert alert-danger box">

        <div class="form-group">
          <label for="burger"></label>
          <input type="text" id="burger" name="burger_name" placeholder="Burger Name">
        </div>

        <button type="button" class="btn btn-warning" type="submit">Add Burger</button>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>
      </form>

    </div>
  </div>

  <div class="d-flex justify-content-center mx-auto">
    <div class="row">

      <div class="float-left mr-4">
        <h2 class="sub-header">Yet To Be Devoured!</h2>

        <ul class="alert alert-danger box">
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devour=true}} {{/unless}} {{/each}}
        </ul>

      </div>

      <div class="float-right">
        <h2 class="sub-header">Devoured!</h2>

        <ul class="alert alert-danger box">
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devour=false}} {{/if}} {{/each}}
        </ul>

      </div>
    </div>

  </div>
</div>